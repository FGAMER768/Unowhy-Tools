                                Tag="reload" />
                        </ContextMenu>
                    </ui:NotifyIcon.Menu>
                </ui:NotifyIcon>
            </ui:TitleBar.Tray>
            -->
        </ui:TitleBar>
        <controls:DialogQ Visibility="Hidden"
                          x:Name="DialogQRoot"
                          Grid.Row="1" />
        <controls:DialogI Visibility="Hidden"
                          x:Name="DialogIRoot"
                          Grid.Row="1" />
        <controls:Wait Visibility="Hidden"
                       x:Name="WaitRoot"
                       Grid.Row="1" />
    </Grid>
</ui:UiWindow>
